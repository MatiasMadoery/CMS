@model Pager<Control_Machine_Sistem.Models.Machine>

@{
    ViewData["Title"] = "Máquinas";
}

<h1 class="mb-4">Máquinas</h1>

<!-- Search form -->
<form method="get" id="filter-form" class="mb-4">
    <div class="row">
        <div class="col-8 col-sm-8 col-md-4">
            <input type="text" name="searchString" class="form-control" placeholder="Buscar cliente o máquina..." value="@ViewData["searchString"]" />
        </div>
        <div class="col-1 col-md-4">
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </div>
</form>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Cargar nueva máquina</a>
</div>

<hr />
@if (!Model.Elements.Any())
{
    <div class="alert alert-warning" role="alert">
        No se encontraron resultados para tu búsqueda.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Elements.First().Customer!.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.Elements.First().Model!.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Elements.First().DeliveryDate)</th>
                <th>@Html.DisplayNameFor(model => model.Elements.First().WarrantyExpirationDate)</th>

                <th>Documentación</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Elements)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Customer!.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Model!.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.DeliveryDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.WarrantyExpirationDate)</td>
                    <td>
                        @if (item.DocUrls != null && item.DocUrls.Any())
                        {
                            <ul>
                                @foreach (var doc in item.DocUrls)
                                {
                                    <li class="doc-name" data-url="@doc">
                                        <a href="@doc" download>@doc</a>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>Sin documentos asociados </span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalle</a>
                        <a asp-action="GenerateQr" asp-controller="QrCodes" asp-route-machineId="@item.Id" class="btn btn-warning btn-sm">Generear Qr</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    @if (Model.PreviousPage)
    {
        <a asp-action="Index" asp-route-pagina="@(Model.CurrentPage - 1)" asp-route-searchString="@ViewData["searchString"]" class="btn btn-secondary btn-sm">Anterior</a>
    }

    Página @Model.CurrentPage de @Model.TotalPages

    @if (Model.PreviousPage)
    {
        <a asp-action="Index" asp-route-pagina="@(Model.CurrentPage + 1)" asp-route-searchString="@ViewData["searchString"]" class="btn btn-secondary btn-sm">Siguiente</a>
    }
</div>

<script src="~/js/cleanNameFile.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".doc-name a").forEach(function (element) {
            const originalUrl = element.getAttribute("href");
            element.textContent = getCleanFileName(originalUrl);
        });
    });
</script> 