@model Control_Machine_Sistem.Models.Machine

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar maquina</h1>

<div>    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer!.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer!.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model!.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model!.Name)
        </dd>  
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ChasisNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ChasisNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EngineNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EngineNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WarrantyExpirationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WarrantyExpirationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DocUrls)
        </dt>
        <dd class="col-sm-10">
            @if (Model.DocUrls != null && Model.DocUrls.Any())
            {
                <ul>
                    @foreach (var doc in Model.DocUrls)
                    {
                        <li class="doc-name" data-url="@doc">
                            <a href="@doc" download>@doc</a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <span>No se encontraron documentos</span>
            }
        </dd>
    </dl>    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CustomerId" />
        <input type="hidden" asp-for="ModelId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>

<script src="~/js/cleanNameFile.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".doc-name a").forEach(function (element) {
            const originalUrl = element.getAttribute("href");
            element.textContent = getCleanFileName(originalUrl);
        });
    });
</script>