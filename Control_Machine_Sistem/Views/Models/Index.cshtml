@model Pager<Control_Machine_Sistem.Models.Model>

@{
    ViewData["Title"] = "Modelos";
}

<h1 class="mb-4">Modelos</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Cargar nuevo modelo</a>
</div>

<hr />
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Elements.First().Name)</th>
                <th>Manuales</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Elements)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @if (item.ManualUrls != null && item.ManualUrls.Any())
                    {
                        <ul>
                            @foreach (var manual in item.ManualUrls)
                            {
                                <li class="manual-name" data-url="@manual">
                                    <a href="@manual" download>@manual</a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>Sin manuales asociados </span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalle</a>
                </td>
            </tr>
        }
    </tbody>
    </table>

<div class="mt-3">
    @if (Model.PreviousPage)
    {
        <a asp-action="Index" asp-route-pagina="@(Model.CurrentPage - 1)" asp-route-searchString="@ViewData["searchString"]" class="btn btn-secondary btn-sm">Anterior</a>
    }

    Página @Model.CurrentPage de @Model.TotalPages

    @if (Model.PreviousPage)
    {
        <a asp-action="Index" asp-route-pagina="@(Model.CurrentPage + 1)" asp-route-searchString="@ViewData["searchString"]" class="btn btn-secondary btn-sm">Siguiente</a>
    }
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}


<script src="~/js/cleanNameFile.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".manual-name a").forEach(function (element) {
            const originalUrl = element.getAttribute("href");
            element.textContent = getCleanFileName(originalUrl);
        });
    });
</script> 