@model IEnumerable<Control_Machine_Sistem.Models.Model>

@{
    ViewData["Title"] = "Index";
}
<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Cargar nuevo modelo</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>Manuales</th>            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @if (item.ManualUrls != null && item.ManualUrls.Any())
                    {
                        <ul>
                            @foreach (var manual in item.ManualUrls)
                            {
                                <li class="manual-name" data-url="@manual">
                                    <a href="@manual" download>@manual</a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No se encontraron manuales</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<script src="~/js/cleanNameFile.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".manual-name a").forEach(function (element) {
            const originalUrl = element.getAttribute("href");
            element.textContent = getCleanFileName(originalUrl);
        });
    });
</script>