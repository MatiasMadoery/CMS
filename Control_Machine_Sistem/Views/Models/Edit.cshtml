@model Control_Machine_Sistem.Models.Model

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data" id="uploadForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label>Manuales cargados</label>
                <table class="table table-bordered">                   
                    <tbody id="existingFiles">
                        @if (Model.ManualUrls != null && Model.ManualUrls.Any())
                        {
                            @for (int i = 0; i < Model.ManualUrls.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <a href="@Model.ManualUrls[i]" target="_blank" class="manual-name">@Model.ManualUrls[i]</a>
                                        <input type="hidden" name="ExistingManuals" value="@Model.ManualUrls[i]" />
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-danger btn-sm" onclick="removeFile(@i)">Eliminar</button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2">No hay archivos cargados.</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <br />
            <div id="fileUploadContainer">
                <div class="form-group">
                    <label asp-for="Manuals" class="control-label">Agregar manuales</label>
                    <input type="file" name="Manuals" class="form-control" multiple />
                    <span asp-validation-for="Manuals" class="text-danger"></span>
                    <br />
                </div>
            </div>            
            <div class="form-group">
                <button type="button" class="btn btn-primary" onclick="addMoreFiles()">Agregar otro archivo</button>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function addMoreFiles() {
            var container = document.getElementById('fileUploadContainer');
            var input = document.createElement('input');
            input.type = 'file';
            input.name = 'Manuals';
            input.className = 'form-control';
            container.appendChild(input);
            container.appendChild(document.createElement('br'));
        }

        function removeFile(index) {
            var row = document.querySelector(`#existingFiles tr:nth-child(${index + 1})`);
            if (row) {
                row.remove();
            }
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<script src="~/js/cleanNameFile.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".manual-name").forEach(function (element) {
            const originalUrl = element.getAttribute("href");
            element.textContent = getCleanFileName(originalUrl);
        });
    });
</script> 