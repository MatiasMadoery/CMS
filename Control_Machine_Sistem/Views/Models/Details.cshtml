@model Control_Machine_Sistem.Models.Model

@{
    ViewData["Title"] = "Details";
}
<h1>Detalle</h1>
<div>
    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>        
        <dt class="col-sm-2">
            <br />
            @Html.DisplayNameFor(model => model.ManualUrls)  <!-- Asumí que es ManualUrls y no Manuals -->
        </dt>
        <dd class="col-sm-10">
            <br />
            @if (Model.ManualUrls != null && Model.ManualUrls.Any())
            {
                <ul>
                    @foreach (var manual in Model.ManualUrls)
                    {
                        <li class="manual-name" data-url="@manual">
                            <a href="@manual" download>@manual</a>  <!-- Aquí se generarán los enlaces -->
                        </li>
                    }
                </ul>
            }
            else
            {
                <span>No se encontraron manuales</span>
            }
        </dd>
    </dl>
</div>
<br />
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a> |
    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">Eliminar</a>
</div>

<!-- Referencia al archivo JS -->
<script src="~/js/cleanNameFile.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".manual-name a").forEach(function (element) {
            const originalUrl = element.getAttribute("href");
            element.textContent = getCleanFileName(originalUrl);  // Aquí se aplica la función
        });
    });
</script>
