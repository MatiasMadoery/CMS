@model Control_Machine_Sistem.Models.Model

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro que lo quieres eliminar?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ManualUrls)  <!-- Asegúrate de que el nombre sea correcto -->
        </dt>
        <dd class="col-sm-10">
            @if (Model.ManualUrls != null && Model.ManualUrls.Any())
            {
                <ul>
                    @foreach (var manual in Model.ManualUrls)
                    {
                        <li class="manual-name" data-url="@manual">
                            <a href="@manual" download>@manual</a>  <!-- Aquí se generarán los enlaces -->
                        </li>
                    }
                </ul>
            }
            else
            {
                <span>No hay manuales</span>
            }
        </dd>
    </dl>

    <!-- Formulario para eliminar -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver al listado</a>
    </form>
</div>

<!-- Referencia al archivo JS -->
<script src="~/js/cleanNameFile.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".manual-name a").forEach(function (element) {
            const originalUrl = element.getAttribute("href");
            element.textContent = getCleanFileName(originalUrl);  // Aquí se aplica la función
        });
    });
</script>
