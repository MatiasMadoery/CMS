@model Control_Machine_Sistem.Models.Model

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<div>
    <hr />
    <br />
    <dl class="row">        
        <dt class="col-sm-2">           
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ManualUrls)  
        </dt>
        <dd class="col-sm-10">
            @if (Model.ManualUrls != null && Model.ManualUrls.Any())
            {
                <ul>
                    @foreach (var manual in Model.ManualUrls)
                    {
                        <li class="manual-name" data-url="@manual">
                            <a href="@manual" download>@manual</a> 
                        </li>
                    }
                </ul>
            }
            else
            {
                <span>No se encontraron manuales</span>
            }
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </form>
</div>

<!-- Referencia al archivo JS -->
<script src="~/js/cleanNameFile.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".manual-name a").forEach(function (element) {
            const originalUrl = element.getAttribute("href");
            element.textContent = getCleanFileName(originalUrl);
        });
    });
</script>
