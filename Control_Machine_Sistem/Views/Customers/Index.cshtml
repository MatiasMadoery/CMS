@* @model IEnumerable<Control_Machine_Sistem.Models.Customer> *@

@model Pager<Control_Machine_Sistem.Models.Customer>

@{
    ViewData["Title"] = "Clientes";
}

<h1 class="mb-4">Clientes</h1>

<!-- Search form -->
<form method="get" id="filter-form" class="mb-4">
    <div class="row">
        <div class="col-8 col-sm-8 col-md-4">
            <input type="text" name="searchString" class="form-control" placeholder="Buscar cliente..." value="@ViewData["searchString"]" />
        </div>
        <div class="col-1 col-md-4">
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </div>
</form>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Cargar nuevo cliente</a>
</div>

<hr />
@if (!Model.Elements.Any())
{
    <div class="alert alert-warning" role="alert">
        No se encontraron resultados para tu búsqueda.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Elements.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.Elements.First().LastName)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Elements)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    @if (Model.PreviousPage)
    {
        <a asp-action="Index" asp-route-pagina="@(Model.CurrentPage - 1)" asp-route-searchString="@ViewData["searchString"]" class="btn btn-secondary btn-sm">Anterior</a>
    }

    Página @Model.CurrentPage de @Model.TotalPages

    @if (Model.PreviousPage)
    {
        <a asp-action="Index" asp-route-pagina="@(Model.CurrentPage + 1)" asp-route-searchString="@ViewData["searchString"]" class="btn btn-secondary btn-sm">Siguiente</a>
    }
</div>




