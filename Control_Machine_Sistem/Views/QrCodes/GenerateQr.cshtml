 @model Control_Machine_Sistem.Models.QrCode
@{
    ViewData["Title"] = "QR Generado";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }

        .qr-container {
            background-color: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 80%;
            max-width: 600px;
        }

        .qr-image {
            width: 100%;
            max-width: 300px;
            margin-top: 20px;
            border: 2px solid #ddd;
            border-radius: 10px;
        }

        .btn-success {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 16px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-success:hover {
                background-color: #218838;
            }

    .service-table {
        display: table;
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

    .service-table th, .service-table td {
        border: 1px solid black;
        padding: 8px;
        text-align: center;
    }

    .service-table th {
        background-color: #f2f2f2;
    }

    .print-only {
        display: none;
    }

    @@media print {
        .no-print {
            display: none;
        }

        .print-only {
            display: block;
        }

        
        body {
            margin: 0;
            padding: 0;
        }

        .service-table {
            width: 100%;
            table-layout: fixed;
        }

        .service-table th, .service-table td {
            width: 50%;
            padding: 15px;
        }
    }  
</style>
</head>
<body>
    <div class="qr-container">
        <h1 class="center">Cliente: @Model.ClientName</h1>
        <h1 class="center">Modelo: @Model.MachineModel</h1>

        <div>
            <img src="@Model.QrImageBase64" alt="QR Code" class="qr-image" />
        </div>

        <div>
            <button onclick="window.print()" class="btn btn-success no-print">Imprimir QR</button>
        </div>

        <div class="print-only">
            <h2 class="center">Registro de Servicios</h2>
            <table class="service-table">
                <thead>
                    <tr>
                        <th>N° de Service</th>
                        <th>Firma</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 8; i++)
                    {
                        <tr>
                            <td>@i</td>
                            <td>_________________</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
