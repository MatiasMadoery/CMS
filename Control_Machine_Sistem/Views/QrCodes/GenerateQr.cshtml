 @model Control_Machine_Sistem.Models.QrCode
@{
    ViewData["Title"] = "QR Generado";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .center {
            text-align: center;
        }
        .qr-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .qr-image {
            width: 300px;
        }
    </style>
</head>
<body>
    <div class="qr-container">
        <h1 class="center">Cliente: @Model.ClientName</h1>
        <h1 class="center">Modelo: @Model.MachineModel</h1>

        <div>
            <img src="@Model.QrImageBase64" alt="QR Code" class="qr-image" />
        </div>

        <div>
            <button onclick="window.print()" class="btn btn-success">Imprimir QR</button>
        </div>
    </div>
</body>
</html>
